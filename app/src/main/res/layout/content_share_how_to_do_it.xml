<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_how_to_do_it"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_share_how_to_do_it">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <AutoCompleteTextView
            android:id="@+id/title_how_to_do_it"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:imeOptions="actionUnspecified"
            android:clickable="true"
            android:hint="How To Do It Tittle"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <AutoCompleteTextView
            android:id="@+id/obs_how_to_do_it"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:imeOptions="actionUnspecified"
            android:clickable="true"
            android:hint="Observations"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/mypersonal_photo_button"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add photo"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:background="@drawable/action_button"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            style="?android:textAppearanceSmall"
            android:text="Capture photo"
            android:layout_gravity="right"
            android:layout_marginLeft="175dp"
            android:id="@+id/camera"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/action_button"
            android:textColor="@color/white"
            android:onClick="dispatchTakePictureIntent"
            android:nestedScrollingEnabled="true" />


    </LinearLayout>
    <ImageView
        android:id="@+id/display_personal_photo"
        android:layout_width="86dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.51" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

        <Button
            android:id="@+id/Publish_how_to_do_it"
            style="?android:textAppearanceSmall"
            android:layout_width="160dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pub_receipe"
            android:background="@drawable/action_button"
            android:textColor="@color/white"
            android:textStyle="bold" />
        </LinearLayout>

</LinearLayout>
