<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_notebook"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="-70dp"
    tools:context="com.shareandsearchfood.shareandsearchfood.NotebookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:button="@android:drawable/ic_menu_delete"
            android:onClick="clickDeleteNote"/>

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/remove"
            android:layout_alignBottom="@+id/remove"
            android:layout_toLeftOf="@+id/remove"
            android:clickable="true"
            android:layout_toStartOf="@+id/remove" />

        <TextView
            android:focusable="false"
            android:id="@+id/textRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/check"
            android:layout_toStartOf="@+id/check"/>

    </RelativeLayout>

</RelativeLayout>