<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_profile"
    android:layout_marginTop="-70dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_how_to_do_it_option">


<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="1">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickProfile"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_weight="0.80" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nickname"
            android:hint="Nickname"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/titulo"
            android:hint="Titulo"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:minHeight="250dp"
        android:maxHeight="250dp"
        android:minWidth="400dp"
        android:maxWidth="400dp"
        android:id="@+id/imageView6"
        android:src="@drawable/loading"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:scaleType="center"
        android:gravity="center"
        android:clickable="true"
        android:onClick="clickRecipe"
        />

<TextView
    android:text="Observações: Vi isto no restaurante do samouco, alguma ideia de como fazer?"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView6"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_margin="10dp"        />

    <TextView
        android:text="timestamp"
        android:layout_width="wrap_content"
        android:id="@+id/data1"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
<TabHost
    android:id="@+id/tabHost"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">




    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/Comments"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:weightSum="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Do it and do that"
                android:id="@+id/editText2"
                android:layout_marginTop="25dp" />

        </TableRow>
        <TableRow
            android:id="@+id/Videos"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

        </TableRow>

    </FrameLayout>

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_height="26dp"
        android:layout_width="match_parent">

    </TabWidget>


</TabHost>
    </ScrollView>

</LinearLayout>
</RelativeLayout>