<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_restaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shareandsearchfood.shareandsearchfood.Restaurant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="86dp"
        android:layout_height="102dp"
        app:srcCompat="@drawable/sample_2"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/go"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="460dp"
        android:layout_marginRight="50dp"
        />

    </LinearLayout>

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="115dp">


            <TabWidget
                android:id="@android:id/tabs"
                android:layout_height="26dp"
                android:layout_width="match_parent">

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Menus"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    android:background="@drawable/customborder">

                    --ME tiago
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
                            android:id="@+id/imageView4"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="8dp"
                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/nickname"
                                android:hint="Nickname"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="25dp"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/titulo"
                                android:hint="Titulo"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="25dp"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </LinearLayout>



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bolos"
                        android:id="@+id/imageView3"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="50dp"
                        />
                    --lets go boy
                    <!--
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="timestamp"
                            android:layout_width="wrap_content"
                            android:id="@+id/data"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="350dp"

                            />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:numStars="5"
                            android:rating="2.0"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:layout_weight="2.70"
                            android:layout_marginBottom="350dp"
                            />
                    </LinearLayout>
-->

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/Photos"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    android:background="@drawable/customborder1">


                    --ME tiago
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/titulo1"
                            android:hint="Titulo"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="25dp"
                            android:textSize="18sp" />


                    </LinearLayout>

                    --go on
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/pizza"
                        android:id="@+id/imageView7"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="50dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Adress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/badge1"
                        android:id="@+id/badge1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        />


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/badge2"
                        android:id="@+id/badge2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        />



                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    </TabHost>


</RelativeLayout>
