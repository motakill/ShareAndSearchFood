<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_visit_person"
    android:layout_marginTop="-70dp"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.shareandsearchfood.shareandsearchfood.Visit_person">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:minHeight="250dp"
            android:maxHeight="250dp"
            android:minWidth="400dp"
            android:maxWidth="400dp"
            android:src="@drawable/loading"
            android:id="@+id/imageView4"
            android:scaleType="center"
            android:clickable="true"
            android:gravity="center"
            android:onClick="clickRecipe"
            android:layout_below="@+id/titulo1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="timestamp"
            android:layout_width="wrap_content"
            android:id="@+id/data2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/titulo1"
            android:hint="Titulo"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox android:id="@+id/star2"
            style="?android:attr/starStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:clickable="true"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_marginTop="17dp" />

        <RatingBar
            android:id="@+id/ratingBar6"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="false"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignRight="@+id/star2"
            android:layout_alignEnd="@+id/star2" />

    </RelativeLayout>

</RelativeLayout>