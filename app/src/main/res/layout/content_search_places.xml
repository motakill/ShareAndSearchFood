<FrameLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment android:id="@+id/googleMap_mota"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.shareandsearchfood.EatTime.SearchPlaces"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/placeText_mota"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnFind_mota"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/placeText_mota"
            android:text="Search"
            android:layout_marginLeft="5dp"
            android:background="@drawable/action_button"
            android:textColor="@color/white"/>


        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnRestaurant"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:text="Nearby Restaurants"
            android:background="@drawable/action_button"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btnCafe"
            android:layout_marginTop="10dp"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:text="Nearby Cofees"
            android:layout_marginLeft="5dp"
            android:background="@drawable/action_button"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnBar"
            android:layout_marginTop="10dp"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:text="Nearby Bars"
            android:layout_marginLeft="5dp"
            android:background="@drawable/action_button"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-110dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="5dp">

            <Spinner
                android:id="@+id/spinner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Radius_arrays"
                android:prompt="@string/Radius"
                />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>